{
    "compilerOptions": {
      "module": "ESNext", // Use "commonjs" if you are not using ES modules, else use "esnext"
      "target": "ESNext", // or the target you prefer
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}